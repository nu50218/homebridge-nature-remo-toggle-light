{
  "pluginAlias": "homebridge-nature-remo-toggle-light",
  "pluginType": "accessory",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "my-light"
      },
      "access_token": {
        "title": "Access Token",
        "type": "string",
        "required": true,
        "default": "access-token-xxxxxxxxxx"
      },
      "signal_id": {
        "title": "Signal ID",
        "type": "string",
        "required": true,
        "default": "signal-xxxxxxxxxx"
      },
      "use_illuminance": {
        "title": "Use illuminance Value",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "use_illuminance_TH": {
        "title": "Illuminance threshold for bright or dark",
        "type": "number",
        "required": false,
        "default": 120
      }
    }
  }
}
